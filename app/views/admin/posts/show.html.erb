<div class='container'>
  <div class='row'>
    <div class='col'>
      <%= image_tag @post.get_post_image %>
      <p>タイトル：<%= @post.title %></p>

      <p>説明：<%= @post.caption %></p>
      <p>ユーザーネーム：<%= @post.user.name %></p>
      <p>投稿日時：<%= @post.created_at.strftime('%Y/%m/%d') %></p>
    </div>
    <div class='col'>
      <%= render "admin/comments/index", post: @post %>
    </div>
  </div>
</div>