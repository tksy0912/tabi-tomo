<div class="container">
  <div class="row m-4">
    <h1 class="mb-4 text-center"><%= @user.name %>さんのユーザー情報</h1>
  </div>
  <hr>
  <div class="row">
    <div class="col-7">
      <div class="media">
        <img class="d-flex align-self-center mr-3"><%= image_tag @user.get_profile_image, size:'100x100', class: 'rounded-circle' %>
        <div class="media-body">
          <table class="m-4">
            <tr>
              <th class="p-2">ユーザーID</th>
              <td class="p-2"><%= @user.id %></td>
            </tr>
            <tr>
              <th class="p-2">名前</th>
              <td class="p-2"><%= @user.name %></td>
            </tr>
            <tr>
              <th class="p-2">メールアドレス</th>
              <td class="p-2"><%= @user.email %></td>
            </tr>
            <tr>
              <th class="p-2">ユーザーステータス</th>
                <% if @user.is_active == true %>
                  <th class="text-success p-2">有効</th>
                <% else %>
                  <th class="text-secondary p-2">退会済</th>
                <% end %>
            </tr>
          </table>
        </div>
      </div>
    </div>
    <div class="col-md-4 offset-md-1">
      <h4>ステータス編集</h4>
      <%= form_with model: @user, url: admin_user_path(@user), method: :patch do |f| %>
        <div class="p-2"><%= f.radio_button :is_active, "true" %>有効</div>
        <div class="p-2"><%= f.radio_button :is_active, "false" %>退会</div>
        <div class="d-flex justify-content-end"><%= f.submit "変更を保存", class: "btn btn-outline-success " %></div>
      <% end %>
    </div>
  </div>
</div>
