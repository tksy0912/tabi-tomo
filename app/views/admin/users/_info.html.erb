<table>
  <tr><%= image_tag user.get_profile_image, size:'100x100' %></tr>
  <tr>
	  <th>name</th>
	  <th><%= user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= user.introduction %></th>
  </tr>
  <tr>
	  <th>status</th>
    <% if user.is_active == true %><!--customerのステータスが有効の時-->
      <th class="text-success">有効</th>
    <% else %><!--それ以外-->
      <th class="text-secondary">退会済</th>
    <% end %>
  </tr>
</table>

<%= link_to "ステータス編集", edit_admin_user_path(@user), class: "btn btn-outline-secondary btn-block" %>