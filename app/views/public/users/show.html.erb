<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>マイページ</h2>
      <%= render 'info', user: @user %>
      <h2 class="mt-3">投稿</h2>
      <%= render 'public/posts/list', posts: @posts %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>My Schedule</h2>
      <%= link_to "New Trip", new_public_trip_path %>
      <%= month_calendar(events: @trips) do |date, trips| %>
        <%= date.day %>

        <% trips.each do |trip| %>
          <div>
            <%= link_to trip.title, public_trip_path(trip.id) %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>