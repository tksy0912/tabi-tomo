<div class="container">
  <div class="col m-4">
    <h1>マイページ</h1>
  </div>
  <div class="row">
    <div class="col-4">

      <%= render 'info', user: @user %>
      <h2 class="mt-3">投稿</h2>
      <%= render 'public/posts/list', posts: @posts %>
    </div>
    <div class='col-md-8'>
      <h2>My Schedule</h2>
      <%= link_to "New Trip", new_public_trip_path %>
      <%= month_calendar(events: @trips) do |date, trips| %>
        <%= date.day %>

        <% trips.each do |trip| %>
          <div>
            <%= link_to trip.title, public_trip_path(trip.id) %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>