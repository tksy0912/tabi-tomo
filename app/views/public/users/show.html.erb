<div class="container">
  <div class="row m-4">
    <h1><%= @user.name %>さんのマイページ</h1>
  </div>
  <hr>
  <div class="row">
    <div class="col-4">
    <%= render 'info', user: @user %>
    <% if @user == current_user %> <!-- ログインユーザーのみプロフィール編集可能 -->
      <%= link_to "プロフィール編集", users_information_edit_path, class: "btn btn-outline-info btn-block" %>
      <%= render 'public/posts/list', posts: @posts %>
    <% end %>
    </div>

    <div class="col-md-7 offset-md-1">
    <% if @user == current_user %> <!-- ログインユーザーならカレンダーを表示 -->
      <h2 class="m-2 alert alert-info" role="alert">My 旅</h2>
      <div class="m-3 d-flex flex-row-reverse">
        <%= link_to "▶New Trip！", new_public_trip_path, class: "btn btn-outline-info rounded-pill btn-lg" %>
      </div>
      <div class="mt-3">
        <%= month_calendar(events: @trips) do |date, trips| %>
          <%= date.day %>

          <% trips.each do |trip| %>
            <div>
              <%= link_to trip.title, public_trip_path(trip.id) %>
            </div>
          <% end %>
        <% end %>
      </div>
    <% else %> <!-- ログインユーザーでなければ該当ユーザーの投稿一覧を表示 -->
      <%= render 'public/posts/list', posts: @posts %>
    <% end %>
    </div>
  </div>
</div>