<div class="container">
  <div class="row">
    <div class="col m-5">
      <h1>プロフィール編集</h1>
      <hr>
      <% if @user.errors.any? %>
        <%= @user.errors.count %>件のエラーが発生しました
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      <%= form_with(model: @user, url: users_information_path, local: true, method: :patch) do |f| %>
        <div class="form-group">
          <b><%= f.label 'アイコン' %></b>
          <%= f.file_field :profile_image, class: "form-control-file user_image", accept: 'image/*' %>
        </div>
        <div class="form-group">
          <b><%= f.label 'ユーザーネーム' %></b>
          <%= f.text_field :name, class: "form-control name", size: "50x20" %>
        </div>
        <div class="form-group">
          <b><%= f.label 'ユーザー紹介' %></b>
          <%= f.text_area :introduction, class: "form-control introduction" %>
        </div>
        <div class="actions col mx-auto m-5">
          <%= f.submit "プロフィール更新", class: "btn btn-info btn-block" %>
        </div>
      <% end %>
    </div>
  </div>
</div>