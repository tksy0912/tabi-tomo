<!--タグリスト-->
<% @tag_list.each do |list|%>
  <i class="fa-sharp fa-solid fa-tag"></i>
  <%=link_to list.name, public_search_tag_path(post_tag_id: list.id) %>
  <%="(#{list.posts.count})" %>
<% end %>
<hr>
<div class="row">
  <% @posts.each do |post| %>
  <div class="col-2 m-2">
    <div class="card">
      <div class="card-body"><%= link_to post.title, public_post_path(post.id) %></div>
      <img class="card-img-bottom"><%= image_tag post.get_post_image, size:'50×50' %>
    </div>
  </div>
  <% end %>
</div>