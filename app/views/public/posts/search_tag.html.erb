<div class="container p-4">
  <div class="row p-4">
    <div class="col-md-8">
      <h2 class="mb-4 text-center">タグが<%=@tag.name%>の投稿一覧</h2>
      <!--タグリスト-->
      <% @tag_list.each do |list|%>
        <i class="fa-sharp fa-solid fa-tag"></i>
        <%=link_to list.name,public_search_tag_path(post_tag_id: list.id) %>
        <%="(#{list.posts.count})" %>
      <% end %>
      <div class="row">
        <% @posts.each do |post| %>
          <div class="col-4">
            <div class="aspect-ratio-box">
              <%= link_to public_post_path(post) do %>
                <%= image_tag post.post_image, size: "50x50" %>
              <% end %>
            </div>
            <div class="mt-3 text-left">
              <b><%= post.title %></b>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>