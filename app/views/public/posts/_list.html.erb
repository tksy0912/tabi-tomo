<table class="table table-borderless">
  <thead style="background-color: #e9ecef;" class="thead-dark">
    <tr>
      <th>タイトル</th>
    </tr>
  </thead>
  <tbody>
  <% @posts.each do |post| %>
    <tr>
      <td class="align-middle"><%= link_to post.title, public_post_path(post.id) %></td>
    </tr>
  <% end %>
  </tbody>
</table>