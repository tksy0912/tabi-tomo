<table class="table table-borderless mt-5">
  <thead style="background-color: #20beea;">
    <tr>
      <th class="d-flex justify-content-center">思い出一覧</th>
    </tr>
  </thead>
  <tbody>
  <% @posts.each do |post| %>
    <tr>
      <td class="d-flex justify-content-center"><%= link_to post.title, public_post_path(post.id) %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<div class="d-flex justify-content-center">
  <%= paginate @posts, theme: 'twitter-bootstrap-4' %>
</div>