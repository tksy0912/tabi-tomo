<h4 class="m-3">思い出一覧</h4>
<table class="table table-borderless mt-3">
  <thead style="background-color: #20beea;">
    <tr>
      <th>タイトル</th>
      <th>投稿日</th>
    </tr>
  </thead>
  <tbody>
  <% @posts.each do |post| %>
    <tr>
      <td class="align-middle"><%= link_to post.title, public_post_path(post.id) %></td>
      <td class="align-middle"><%= post.created_at.to_date %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<div class="d-flex justify-content-center">
  <%= paginate @posts, theme: 'twitter-bootstrap-4' %>
</div>