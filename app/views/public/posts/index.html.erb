<div class='container'>
  <div class='row'>
    <div class='col'>
      <!--タグリスト-->
    <% @tag_list.each do |list|%>
      <i class="fa-sharp fa-solid fa-tag"></i>
      <%=link_to list.name, public_search_tag_path(post_tag_id: list.id) %>
      <%="(#{list.posts.count})" %>
    <% end %>

    <table class="table table-borderless">
      <thead style="background-color: #e9ecef;">
        <tr>
          <th>タイトル</th>
        </tr>
      </thead>
      <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td class="align-middle"><%= link_to post.title, public_post_path(post.id) %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
    </div>
  </div>
</div>