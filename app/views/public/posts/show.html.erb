<div class='container'>
  <div class='row'>
    <div class='col'>
      <%= image_tag @post.get_post_image %>
      <p>タイトル：<%= @post.title %></p>
        <div class=<%= "favorite-" + @post.id.to_s %> >
          <%= render "public/favorites/btn", post: @post %>
        </div>
      <p>説明：<%= @post.caption %></p>
      <p>ユーザーネーム：<%= @post.user.name %></p>
      <p>投稿日時：<%= @post.created_at.strftime('%Y/%m/%d') %></p>
      <!--<p>スケジュール：<= link_to "Trip Schedules", public_trip_path(@trip) %></p>-->
      <% if @post.user == current_user %>
        <!--<= link_to "編集する", edit_public_post_path(@post.id), class: "btn btn-success ms-3" %>-->
        <%= link_to "削除する", public_post_path(@post.id), method: :delete, class: "btn btn-danger ms-3" %>
      <% end %>
    </div>
    <div class='col'>
      <%= render "public/comments/index", post: @post %>
      <%= render "public/comments/form", post: @post, comment: @comment %>
    </div>
  </div>
</div>