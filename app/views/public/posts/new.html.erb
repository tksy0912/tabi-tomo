<div class="container">
  <div class="row">
    <div class="col m-3">
    <h2 class="m-3">新規投稿</h2>
    <hr>
      <%= form_with(model: @post, url: public_posts_path) do |f| %>
        <%= f.hidden_field :trip_id, value: params[:trip_id] %>
        <%= f.file_field :post_image, accept: "image/*", class: "w-100" %>
        <div class="input-group mb-3 mt-4">
           <%= f.text_field :title, class: "form-control", placeholder: "投稿タイトル" %>
        </div>
        <%= f.text_area :caption, class: "form-control", rows: "3", placeholder: "コメント" %>
        <hr>
        <label>タグ(,で区切ると複数タグ登録できます)</label>
        <%= f.text_field :name,value: @tag_list, class: 'form-control', placeholder: "タグ,タグ" %>

        <%= f.submit '投稿', class: "btn btn-lg btn-block btn-info mt-4" %>
      <% end %>
    </div>
  </div>
</div>