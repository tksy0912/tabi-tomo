<div class="container">
  <div class="row">
    <div class="mx-auto">
      <div class="col m-3">
        <h1>New Trip</h1>
        <%= form_with(model: @trip, url: public_trips_path) do |f| %>
        <div class="field">
          <%= f.label "タイトル" %>
          <%= f.text_field :title %>
        </div>
        <div class="field">
          <%= f.label "日程" %>
          <%= f.date_field :start_time %>
            ～
          <%= f.date_field :end_time %>
        </div>
      </div>

      <div class="col m-3">
        <h1>Schedules</h1>
        <%= link_to_add_association '＋', f, :schedules, data: { association_insertion_node: '#schedule-forms', association_insertion_method: 'append' }, class: "btn btn-outline-primary" %>

        <div id="schedule-forms">
          <%= f.fields_for :schedules do |s| %>
            <%= render 'schedule_fields', f: s %>
          <% end %>
        </div>
      </div>

        <div class="actions">
          <%= f.submit "カレンダーに追加する", class: "btn btn-info btn-block" %>
        </div>
      <% end %>
    </div>
  </div>
</div>