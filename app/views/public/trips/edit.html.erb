<div class="container">
  <div class="row">
    <div class="col m-3">
      <h2 class="m-3">タイトル編集</h2>
      <hr>
      <%= form_with(model: @trip, url: edit_public_trip_path(@trip.id), method: :patch) do |f| %>
      <table class="table table-borderless">
        <tr>
          <th class="col-lg-2" style="background-color: #20beea;"><%= f.label "タイトル" %></th>
          <td><%= f.text_field :title, size: "50x20" %></td>
        </tr>
        <tr>
          <th class="col-lg-2" style="background-color: #20beea;"><%= f.label "日程" %></th>
          <td>
            <%= f.date_field :start_time %>
              ～
            <%= f.date_field :end_time %>
          </td>
        </tr>
      </table>
      <div class="actions mt-5">
        <%= f.submit "更新", class: "btn btn-info btn-block" %>
      </div>
      <% end %>
      <div class="mt-5">
        <%= link_to '◀Back', public_trip_path(@trip), class: "btn btn-outline-primary ms-3" %>
      </div>
    </div>
  </div>
</div>