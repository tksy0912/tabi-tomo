<table>
  <tbody>
    <% post.comments.each do |comment| %>
    <tr>
      <td>
        <%= link_to users_my_page_path(comment.user) do %>
          <%= image_tag comment.user.get_profile_image, size: "50x50", class: 'rounded-circle' %>
        <% end %>
        ：
      </td>
      <td><%= comment.comment %></td>
      <td>
        <% if comment.user == current_user %>
          <%= link_to "削除", public_post_comment_path(post, comment), method: :delete, class: "ml-3 btn btn-sm btn-outline-danger float-end" %>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>