<div class="container p-4">
  <div class="row p-4">
    <div class="col-md-8">
      <h2 class="mb-4 text-center">search for "<%= @word %>"</h2>
      <div class="row">
        <% @posts.each do |post| %>
          <div class="col-4">
            <div class="aspect-ratio-box">
              <%= link_to public_post_path(post.id) do %>
                <%= image_tag post.post_image, size: "50x50" %>
              <% end %>
            </div>
            <div class="mt-3 text-left">
              <b><%= post.title %></b>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>